<% provide(:title, 'Features') %>
<h1>All Features</h1>
<% if policy(:feature).new? %>
  <div class='col-md-3'>
    <%= button_to 'Add New Feature', new_feature_path, method: :get, class: 'btn btn-primary' %>
    <br>
  </div>
<% end %>
<table class='table table-bordered'>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Price</th>
    <th>Units</th>
    <% if policy(:feature).update? %>
      <th>Actions</th>
    <% end %>
  </tr>
  <tbody class='tbody'>
  <%= render @features %>
  </tbody>
</table>
<%= will_paginate %>
