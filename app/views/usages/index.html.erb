<% provide(:title, 'Usages') %>
<h1>Usages</h1>
<% if current_user.admin? %>
  <div class='col-md-3'>
    <%= button_to 'Add Usage', add_usages_path, method: :get, class: 'btn btn-primary' %>
    <br>
  </div>
<% end %>
<table class='table'>
  <tr>
    <th>User</th>
    <th>Plan</th>
    <th>Feature</th>
    <th>Features Limit</th>
    <th>Features Used</th>
    <th>Actions</th>
  </tr>
  <tbody class='tbody'>
  <% @usages.each { |usage| %>
  <%=  render 'usage', usage: usage  %>
  <% } %>
  </tbody>
</table>
