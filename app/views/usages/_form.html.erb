<%= form_for([@subscription, @usage]) do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user, class: 'form-control', disabled: true, value: @subscription.user.name %>
  <%= f.label :plan %>
  <%= f.text_field :plan, class: 'form-control', disabled: true, value: @subscription.plan.name %>
  <%= f.label :feature %>
  <% unless @usage.feature %>
    <%= f.select :feature_id, @subscription_features, {include_hidden: false}, class: 'form-control' %>
  <% else %>
    <%= f.text_field :feature_id, class: 'form-control', disabled: true, value: @usage.feature.name %>
  <% end %>
  <%= f.label :feature_count %>
  <%= f.number_field :feature_count, class: 'form-control', required: true, min: 0 %>
  <%= f.submit submit_text, class: 'btn btn-primary' %>
<% end %>
