<%= form_for(@plan) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', required: true %>
  <%= f.label :monthly_fee %>
  <%= f.number_field :monthly_fee, class: 'form-control', required: true, min: 0 , default: 0%>
  <%= f.select :feature_ids, @all_features, {include_hidden: false, selected: pre_selected_features(@plan)}, multiple: true %>
  <%= f.submit submit_text, class: 'btn btn-primary' %>
<% end %>
