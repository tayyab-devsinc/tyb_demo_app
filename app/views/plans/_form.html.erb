<%= form_for(@plan) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', required: true %>
  <%= f.select :features, all_features_for_select, {include_hidden: false, :selected => pre_selected_features }, multiple: true %>
  <%= f.submit labels[:button], class: 'btn btn-primary' %>
<% end %>
